<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ronen.smartvocallist">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="false"
        android:icon="@drawable/vocal"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:supportsRtl="true">
        <activity android:name=".choooseEdit"></activity>
        <activity
            android:name=".CheckListsActivity"
            android:label="@string/title_activity_check_lists"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity android:name=".LoginActivity"
                  android:theme="@style/Theme.AppCompat.Light">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SignupActivity"
            android:label="Sign up"
            android:parentActivityName=".LoginActivity"
            android:theme="@style/Theme.AppCompat.Light">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LoginActivity" />
        </activity>


        <activity
            android:name=".AddListItemActivity"
            android:launchMode = "singleTop"
            android:label="@string/title_activity_add_list_item"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddListActivity"
            android:launchMode = "singleTop"
            android:label="@string/title_activity_add_list_activity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".PocketSphinxActivity"
            android:launchMode = "singleTop"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>
